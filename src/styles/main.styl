@import 'font-awesome/css/font-awesome.css'

// Style using Bespoke Classes: https://github.com/markdalgleish/bespoke-classes

// code blocks can take up all the slide width
code[class*="language-"],
pre[class*="language-"],
code.bullet,
pre.bullet
  font-family: 'Operator Mono Book', 'Meslo LG S', Menlo, Consolas, Monaco,
    'Andale Mono', 'Ubuntu Mono', monospace
  max-width: 640px // TODO: maybe add this to the theme

// Some more horizontal padding for inline code
:not(pre) > code[class*="language-"],
:not(pre) > code.bullet
  padding: .1em .5em

// highlight current code bullet, mute others
code
  &.bespoke-bullet-active
    opacity: 0.5
  &.bespoke-bullet-active.bespoke-bullet-current
    opacity: 1

video
  width: 100%!important
  height: 100%
  z-index: -1

.u-rounded {
  border-radius: 0.3em
}

.u-fullWidth
  display: block
  max-width: 100%
  height: auto

.u-red
  color: #BF2020;

.u-green
  color: #8AE234;

.u-yellow
  color: #9D8000;

.u-gitTomato
  color: #F53F2D;

